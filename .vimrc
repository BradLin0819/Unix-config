set nu
set ai
set cursorline
set encoding=utf-8
set fileencodings=utf-8
set laststatus=2
filetype on
filetype plugin on
filetype indent on
set mouse=a
set showcmd
set expandtab
set tabstop=4
set shiftwidth=4
set ruler
set noswapfile
inoremap ( ()<Esc>i
inoremap " ""<Esc>i
inoremap ' ''<Esc>i
inoremap [ []<Esc>i
inoremap {<CR> {<CR>}<Esc>ko
inoremap {{ {}<ESC>i

" Color configuration
set bg=dark
